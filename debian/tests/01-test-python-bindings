#!/bin/sh

exec 2>&1

set -xe

CC=clang-17
CXX=clang++-17

SOURCE_DIR=$PWD
BUILD_DIR=$AUTOPKGTEST_TMP/build-python-bindings

CTEST_OPTIONS="--timeout 2400 --repeat until-pass:5 --output-on-failure"

cmake -GNinja -S $SOURCE_DIR/python_bindings/ -B $BUILD_DIR \
-DCMAKE_C_COMPILER=$CC -DCMAKE_CXX_COMPILER=$CXX \
-DCMAKE_BUILD_TYPE=Release \
-DPYBIND11_USE_FETCHCONTENT=OFF \
-DACTUALLY_BUILD_PYTHON_BINDINGS=OFF

cmake --build $BUILD_DIR

ctest $CTEST_OPTIONS -j1 --test-dir $BUILD_DIR
